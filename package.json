{
  "name": "videojs-plus",
  "version": "1.6.9",
  "description": "An extension and skin for video.js",
  "main": "dist/videojs-plus.umd.js",
  "module": "dist/videojs-plus.es5.js",
  "typings": "./index.d.ts",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "scripts": {
    "start": "node server.js",
    "dev": "export NODE_ENV=dev && node server.js & rollup -c -w",
    "build": "rollup -c rollup.config.js",
    "lint": "eslint 'source/**/*.js'",
    "prebuild": "rimraf dist",
    "prepublishOnly": "yarn build && node gh-pages.js",
    "docs": "yarn docsify serve docs"
  },
  "license": "Apache-2.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --rule 'no-console: [\"error\", { allow: [\"warn\", \"error\"] }]'  --max-warnings=0",
      "prettier --ignore-path .eslintignore --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{yml,md}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@babel/node": "^7.13.0",
    "@babel/preset-env": "^7.13.5",
    "@types/videojs": "^5.16.2",
    "docsify-cli": "^4.4.2",
    "eslint": "^7.20.0",
    "express": "^4.17.1",
    "gh-pages": "^3.1.0",
    "husky": "^5.1.1",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.21",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.39.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-scss": "^2.6.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "sass": "^1.32.8",
    "video.js": "7.11.4",
    "videojs-contrib-quality-levels": "^2.0.9",
    "videojs-plus-font": "Pong420/font#af50d0e"
  }
}
